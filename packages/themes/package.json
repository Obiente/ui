{
  "name": "@obiente/themes",
  "version": "1.0.0",
  "description": "The core theming engine for Obiente UI, enabling consistent and customizable design across all components.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./rollup": {
      "import": "./dist/rollup/index.js",
      "require": "./dist/rollup/index.cjs",
      "types": "./dist/rollup/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite build --watch  && vite build --mode rollup --watch",
    "dev:main": "pnpm type-check && vite build --watch",
    "dev:rollup": "vite build --mode rollup --watch",
    "build": "pnpm type-check && vite build && vite build --mode rollup",
    "build:main": "pnpm type-check && vite build",
    "build:rollup": "vite build --mode rollup",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@catppuccin/palette": "^1.4.0",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@rollup/pluginutils": "^5.3.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.3.1",
    "rollup": "^4.50.0",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.7",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4"
  }
}

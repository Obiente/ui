    "@rollup/pluginutils": "^5.3.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"

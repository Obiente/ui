{
  "name": "@obiente/ui",
  "version": "0.1.0",
  "description": "Vue 3 UI components with extensive theming support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./utils": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./composables": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ark-ui/vue": "^5.18.3",
    "@obiente/themes": "workspace:*",
    "vue": "^3.4.19"
  },
  "peerDependencies": {
    "vue": "^3.4.19"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "keywords": [
    "vue",
    "ui",
    "components",
    "theming",
    "design-system"
  ],
  "license": "AGPL-3.0-only"
}

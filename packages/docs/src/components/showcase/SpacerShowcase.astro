---
// Spacer and Flex will be passed from the parent component
const { Spacer, Flex } = Astro.props;
---

<section class="component-section">
  <h2>Spacer</h2>
  <p class="description">
    A utility component for adding flexible or fixed spacing between elements.
  </p>

  <div class="example-wrapper">
    <div class="example">
      <h4>Fixed Width Spacers</h4>
      <Flex class="spacer-demo">
        <div class="spacer-item">Item 1</div>
        <Spacer width={2} class="spacer-highlight" />
        <div class="spacer-item">Item 2</div>
        <Spacer width={4} class="spacer-highlight" />
        <div class="spacer-item">Item 3</div>
      </Flex>
    </div>

    <div class="example">
      <h4>Growing Spacer (pushes elements apart)</h4>
      <Flex class="spacer-demo">
        <div class="spacer-item">Left</div>
        <Spacer grow={true} class="spacer-highlight" />
        <div class="spacer-item">Right</div>
      </Flex>
    </div>

    <div class="example">
      <h4>Vertical Spacer</h4>
      <div class="spacer-demo-vertical">
        <div class="spacer-item">Top</div>
        <Spacer height={4} class="spacer-highlight" />
        <div class="spacer-item">Bottom</div>
      </div>
    </div>
  </div>

  <div class="code-example">
    <pre><code>{`<Flex>
  <div>Item 1</div>
  <Spacer :width="2" />
  <div>Item 2</div>
</Flex>

<Flex>
  <div>Left</div>
  <Spacer :grow="true" />
  <div>Right</div>
</Flex>`}</code></pre>
  </div>

  <div class="props-table">
    <h3>Props</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Default</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>width</code></td>
          <td><code>number | string</code></td>
          <td><code>undefined</code></td>
          <td>Fixed width (in rem or CSS value)</td>
        </tr>
        <tr>
          <td><code>height</code></td>
          <td><code>number | string</code></td>
          <td><code>undefined</code></td>
          <td>Fixed height (in rem or CSS value)</td>
        </tr>
        <tr>
          <td><code>size</code></td>
          <td><code>number | string</code></td>
          <td><code>undefined</code></td>
          <td>Shorthand for both width and height</td>
        </tr>
        <tr>
          <td><code>grow</code></td>
          <td><code>boolean</code></td>
          <td><code>false</code></td>
          <td>If true, takes up all available space</td>
        </tr>
        <tr>
          <td><code>themeClasses</code></td>
          <td><code>string</code></td>
          <td><code>undefined</code></td>
          <td>CSS classes for theming</td>
        </tr>
      </tbody>
    </table>
  </div>
</section>

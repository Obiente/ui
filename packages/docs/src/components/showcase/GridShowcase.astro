---
// Grid will be passed from the parent component
const { Grid } = Astro.props;
---

<section class="component-section">
  <h2>Grid</h2>
  <p class="description">
    A responsive grid layout with configurable columns and gap spacing.
  </p>

  <div class="example-wrapper">
    <div class="example">
      <h4>Basic Grid (3 columns)</h4>
      <Grid columns={3} gap={4} class="grid-demo">
        {Array.from({ length: 6 }).map((_, i) => (
          <div class="grid-item">Grid Item {i + 1}</div>
        ))}
      </Grid>
    </div>

    <div class="example">
      <h4>Responsive Grid</h4>
      <Grid columns={{ base: 1, sm: 2, md: 3, lg: 4 }} gap={4} class="grid-demo">
        {Array.from({ length: 8 }).map((_, i) => (
          <div class="grid-item">Grid Item {i + 1}</div>
        ))}
      </Grid>
    </div>

    <div class="example">
      <h4>Different Gap Sizes (x and y)</h4>
      <Grid columns={2} gap={{ x: 6, y: 2 }} class="grid-demo">
        {Array.from({ length: 4 }).map((_, i) => (
          <div class="grid-item">Grid Item {i + 1}</div>
        ))}
      </Grid>
    </div>
  </div>

  <div class="code-example">
    <pre><code><Grid :columns="3" :gap="4">
  <div>Item 1</div>
  <div>Item 2</div>
  <div>Item 3</div>
</Grid>

<Grid :columns="{ base: 1, md: 2, lg: 3 }" :gap="4">
  <div>Item 1</div>
  <div>Item 2</div>
  <div>Item 3</div>
</Grid></code></pre>
  </div>

  <div class="props-table">
    <h3>Props</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Default</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>columns</code></td>
          <td><code>number | ResponsiveValue&lt;number&gt;</code></td>
          <td><code>1</code></td>
          <td>Number of columns in the grid</td>
        </tr>
        <tr>
          <td><code>gap</code></td>
          <td><code>number | GapObject | ResponsiveValue&lt;number | GapObject&gt;</code></td>
          <td><code>0</code></td>
          <td>Gap between grid items in rem</td>
        </tr>
        <tr>
          <td><code>themeClasses</code></td>
          <td><code>string</code></td>
          <td><code>undefined</code></td>
          <td>CSS classes for theming</td>
        </tr>
      </tbody>
    </table>
  </div>
</section>

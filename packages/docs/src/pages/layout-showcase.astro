---
import Layout from '../layouts/Layout.astro';
import { Container, Grid, Flex, Stack, Spacer } from '../ui-components';

// Import component showcases
import ContainerShowcase from '../components/showcase/ContainerShowcase.astro';
import GridShowcase from '../components/showcase/GridShowcase.astro';
import FlexShowcase from '../components/showcase/FlexShowcase.astro';
import StackShowcase from '../components/showcase/StackShowcase.astro';
import SpacerShowcase from '../components/showcase/SpacerShowcase.astro';

// Import styles
import '../styles/showcase.css';
---

<Layout title="Obiente UI - Layout Components">
  <div class="layout-showcase">
    <h1>Layout Components Showcase</h1>
    <p class="intro">
      Explore the core layout components of Obiente UI, designed for creating responsive and flexible layouts.
    </p>

    <!-- Container Component -->
    <ContainerShowcase Container={Container} />
    
    <!-- Grid Component -->
    <GridShowcase Grid={Grid} />
    
    <!-- Flex Component -->
    <FlexShowcase Flex={Flex} />
    
    <!-- Stack Component -->
    <StackShowcase Stack={Stack} />
    
    <!-- Spacer Component -->
    <SpacerShowcase Spacer={Spacer} Flex={Flex} />
  </div>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import DocumentationLayout from "../components/content/DocumentationLayout.vue";
import SimplePlayground from "../components/SimplePlayground.vue";
import { Container, Stack, Divider } from "@obiente/ui";

// Remove SSR export - we want prerendering
// export const prerender = false;
---

<Layout title="Obiente UI - Components Showcase">
  <DocumentationLayout currentPage="/components-showcase" client:load>
    <Container>
      <Stack space="8">
        <div>
          <h1 class="text-gradient font-display text-4xl md:text-5xl font-bold">
            Component Showcase
          </h1>
          <p class="text-lg mt-4 opacity-80 max-w-3xl">
            Interactive examples of all Obiente UI components with theme
            switching and live demonstrations. Experience the flexibility and
            power of our design system.
          </p>
        </div>

        <Divider themeClasses="border.subtle" />

        <SimplePlayground client:load />
      </Stack>
    </Container>
  </DocumentationLayout>
</Layout>

<style>
  .text-gradient {
    background: var(--oi-gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
